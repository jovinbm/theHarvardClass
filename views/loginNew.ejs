<!--start of sandbox login form-->
<div class="container">
    <!--data-dv attributes for bootstrap validator plugin-->
    <form action="/loginNew"
          method="post"
          id="studentLoginForm"
          data-bv-message="This value is not valid"
          data-bv-feedbackicons-valid="glyphicon glyphicon-ok"
          data-bv-feedbackicons-invalid="glyphicon glyphicon-remove"
          data-bv-feedbackicons-validating="glyphicon glyphicon-refresh">

        <!--Username field-->
        <div class="form-group">
            <label for="customUsername">Username</label>
            <input type="text"
                   class="form-control"
                   id="customUsername"
                   placeholder="Enter your Username"
                   name="username"
                   data-bv-message="The username is not valid"
                   data-bv-notempty="true"
                   data-bv-notempty-message="The username is required and cannot be empty"
                   data-bv-regexp="true"
                   data-bv-regexp-regexp="^[a-zA-Z0-9_\.]+$"
                   data-bv-regexp-message="The username can only consist of alphabetical, number, dot and underscore"
                   data-bv-stringlength="true"
                   data-bv-stringlength-min="3"
                   data-bv-stringlength-max="5"
                   data-bv-stringlength-message="The custom username must be at least 3 and at most 5 characters long"/>
        </div>

        <!--password field-->
        <div class="form-group">
            <label for="classCode">Password</label>
            <input type="password"
                   class="form-control"
                   id="classCode"
                   placeholder="Password"
                   name="password"
                   data-bv-message="The password is not valid"
                   data-bv-notempty="true"
                   data-bv-notempty-message="The password is required and cannot be empty"
                   data-bv-regexp="true"
                   data-bv-regexp-regexp="^[a-zA-Z0-9_\.]+$"
                   data-bv-regexp-message="The password can only consist of alphabetical, number, dot and underscore"
                   data-bv-stringlength="true"
                   data-bv-stringlength-min="3"
                   data-bv-stringlength-max="5"
                   data-bv-stringlength-message="The class code must be at least 3 and at most 5 characters long"/>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-default btn-block">Log In</button>
        </div>
    </form>
</div>
<!--end of sandbox login form-->


